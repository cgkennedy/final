
<h1>
    <i class="fas fa-mountain"></i>
    Rating for <%= @attraction[:title] %>
</h1>

<form action="/attractions/<%= @attraction[:id] %>/ratings/create">
  <div class="form-group">
    <label>What are you reporting on?</label>
    <select class="form-control" name="worth_it">
      <option value="1">Cool Scenery</option>
      <option value="0">Wildlife Sighting</option>
    </select>
  </div>
  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" rows="3" name="comments"></textarea>
  </div>
  <div class="form-group">
    <label>Your Park Review Location</label>

  <div class="container mt-5">
        <input type="text" name="location">
    </div>

<div class="container mt-5">
</div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>