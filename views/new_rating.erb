
<h1>
    <i class="fas fa-mountain"></i>
    Rating for <%= @attraction[:title] %>
</h1>

<form action="/attractions/<%= @attraction[:id] %>/ratings/create">
  <div class="form-group">
    <label>Have you visited this attraction this week?</label>
    <select class="form-control" name="going">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </select>
  </div>
  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" rows="3" name="comments"></textarea>
  </div>
  <div class="form-group">
    <label>Your Coordinates</label>
    <textarea class="form-control" rows="3" name="coordinates"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>